@model SearchPagedResultSet
@{
    const int maxPagesToDisplayInNav = 4;
    var totalPages = Model.TotalPages;
    var numPagesToDisplayInNav = totalPages <= maxPagesToDisplayInNav ? totalPages : maxPagesToDisplayInNav;
    var pageNumbers = Model.GetNavigationPageNumbers(numPagesToDisplayInNav);
    var previousPageNumber = Model.CurrentPage - 1;
    var previousPageParam = previousPageNumber == 1 ? "" : $"&p={previousPageNumber}";
}

@if (totalPages > 1)
{
    <div class="mt-3">
        <nav aria-label="Search result pages">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="?@(Model.QueryString)@(previousPageParam)">Previous</a></li>
                }

                @foreach (var p in pageNumbers)
                {
                    var pageParam = "";
                    if (p != 1)
                    {
                        pageParam = "&p=" + p;
                    }

                    <li class="page-item@(p == Model.CurrentPage ? " active":"")"><a class="page-link" href="?@(Model.QueryString)@pageParam">@p</a></li>
                }

                @if (Model.CurrentPage < totalPages)
                {
                    <li class="page-item"><a class="page-link" href="?@(Model.QueryString)&p=@(Model.CurrentPage + 1)">Next</a></li>
                }
                <li class="page-item"><a class="page-link page-link-light">Page @Model.CurrentPage of @Model.TotalPages</a></li>
            </ul>
        </nav>
    </div>
}