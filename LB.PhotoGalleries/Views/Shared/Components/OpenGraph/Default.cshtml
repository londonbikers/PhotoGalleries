@model OpenGraphModel
<meta property="og:title" content="@Html.Raw(Model.Title)" />
<meta property="og:description" content="@Html.Raw(Model.Description)" />
<meta property="og:type" content="@Html.Raw(Model.Type)" />
<meta property="og:locale" content="@Html.Raw(Model.Locale)" />
<meta property="og:site_name" content="@Html.Raw(Model.SiteName)" />
<meta property="og:url" content="@Html.Raw(Model.Url)" />
@foreach (var image in Model.Images)
{
    <meta property="og:image" content="@Html.Raw(image.Url)" />
    <meta property="og:image:type" content="@Html.Raw(image.ContentType)" />
    @if (image.Width.HasValue) {
        <meta property="og:image:width" content="@Html.Raw(image.Width.Value)" />
    }
    @if (image.Height.HasValue) {
        <meta property="og:image:height" content="@Html.Raw(image.Height.Value)" />
    }
}