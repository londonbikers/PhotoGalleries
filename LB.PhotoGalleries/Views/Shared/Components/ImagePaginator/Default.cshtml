@model PagedResultSet<Image>
@{
    const int maxPagesToDisplayInNav = 4;
    var totalPages = Model.TotalPages;
    var numPagesToDisplayInNav = totalPages <= maxPagesToDisplayInNav ? totalPages : maxPagesToDisplayInNav;
    var pageNumbers = Model.GetNavigationPageNumbers(numPagesToDisplayInNav);
    var previousPageNumber = Model.CurrentPage - 1;
}

@if (totalPages > 1)
{
    <div class="mt-3">
        <nav aria-label="Photo pages">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" href="@Model.BuildQueryString(Model.CurrentPage - 1, Context.Request.Path.Value)">Previous</a></li>
                }

                @foreach (var p in pageNumbers)
                {
                    <li class="page-item@(p == Model.CurrentPage ? " active":"")"><a class="page-link" href="@Model.BuildQueryString(p, Context.Request.Path.Value)">@p</a></li>
                }

                @if (Model.CurrentPage < totalPages)
                {
                    <li class="page-item"><a class="page-link" href="@Model.BuildQueryString(Model.CurrentPage + 1, Context.Request.Path.Value)">Next</a></li>
                }
                <li class="page-item disabled">
                    <span class="page-link">
                        Page @Model.CurrentPage of @Model.TotalPages
                    </span>
                </li>
            </ul>
        </nav>
    </div>
}