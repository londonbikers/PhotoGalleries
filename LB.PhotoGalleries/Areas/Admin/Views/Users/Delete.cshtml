@model LB.PhotoGalleries.Application.Models.User
@{
    ViewData["Title"] = $"Delete user: {Model.Name}";
    var error = (string)ViewData["error"];
    var ownAccount = (bool)ViewData["ownAccount"];
    var galleriesCount = (int) ViewData["galleriesCount"];
    var commentsCount = (int) ViewData["commentsCount"];
}

<h1>Delete User</h1>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger" role="alert">
        @error
    </div>
}

@if (ownAccount)
{
    <div class="alert alert-info" role="alert">
        You cannot delete your own account
    </div>
}

<h3>Are you sure you want to delete this user?</h3>
Please note:
<ul>
    <li>Any galleries they have created will be anonymised</li>
    <li>Any comments this user has created will be anonymised</li>
</ul>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PartitionKey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PartitionKey)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt class="col-sm-2">
            Number of galleries
        </dt>
        <dd class="col-sm-10">
            @galleriesCount
        </dd>

        <dt class="col-sm-2">
            Number of comments
        </dt>
        <dd class="col-sm-10">
            @commentsCount
        </dd>

    </dl>

    <form asp-action="Delete" asp-route-pk="@Model.PartitionKey" asp-route-uid="@Model.Id">
        @if (!ownAccount)
        {
            <input type="submit" value="Delete" class="btn btn-danger" /> <text>|</text>
        }
        <a asp-action="Index">Back to List</a>
    </form>
</div>
