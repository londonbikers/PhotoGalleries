@model IEnumerable<LB.PhotoGalleries.Application.Models.User>
@{
    ViewData["Title"] = "Users Admin";
}

<h1>Latest Users</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Picture)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Picture)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </tbody>
</table>
